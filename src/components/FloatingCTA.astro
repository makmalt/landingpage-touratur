---
const { content } = Astro.props;
---

<a
  href={content.waLink}
  class="fixed bottom-5 right-5 z-50 group chat-fade-in"
  target="_blank"
  rel="noopener noreferrer"
  aria-label="Chat WhatsApp"
>
  <!-- Tooltip -->
  <div
    class="absolute bottom-16 right-0 mb-2 mr-2 bg-white text-gray-800 text-sm px-3 py-2 rounded-lg shadow-md opacity-0 translate-y-2 scale-95 group-hover:opacity-100 group-hover:translate-y-0 group-hover:scale-100 transition-all duration-300 ease-out whitespace-nowrap pointer-events-none"
  >
    {content.text}
  </div>

  <!-- Button -->
  <div
    class="bg-green-500 text-white p-4 rounded-full shadow-lg hover:bg-green-600 transition-all"
  >
    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
      <path
        d="M20.52 3.48A11.9 11.9 0 0012.01 0C5.38 0 .01 5.37.01 12c0 2.11.55 4.18 1.59 6.01L0 24l6.25-1.6a11.94 11.94 0 005.76 1.46h.01c6.63 0 12-5.37 12-12 0-3.2-1.24-6.21-3.5-8.39zM12.01 22c-1.73 0-3.44-.45-4.95-1.31l-.35-.2-3.71.95.99-3.61-.22-.37A9.94 9.94 0 012.01 12c0-5.52 4.49-10 10-10a10 10 0 110 20z"
      ></path>
      <path
        d="M17.2 14.7l-2.37-.7a.77.77 0 00-.74.2l-.95.97a7.53 7.53 0 01-3.6-3.61l.97-.96a.79.79 0 00.21-.74l-.7-2.37a.79.79 0 00-.74-.55H7.24a.79.79 0 00-.79.8c0 5.1 4.15 9.24 9.24 9.24.44 0 .79-.35.79-.79v-1.57c0-.33-.22-.64-.53-.73z"
      ></path>
    </svg>
  </div>
</a>

<style>
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .chat-fade-in {
    animation: fadeInUp 0.5s ease-out both;
  }
</style>
