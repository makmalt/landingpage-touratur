<div x-data="{ open: false, imgSrc: '' }" x-cloak>
  <!-- SEO H2 untuk Galeri -->
  <h2 class="sr-only">Galeri Foto Paket Wisata dari Agen Travel Tasikmalaya</h2>

  <!-- Modal -->
  <div
    x-show="open"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 scale-95"
    x-transition:enter-end="opacity-100 scale-100"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 scale-100"
    x-transition:leave-end="opacity-0 scale-95"
    @click="open = false"
    @keydown.escape.window="open = false"
    class="fixed inset-0 bg-white/40 backdrop-blur-sm flex items-center justify-center z-50"
    x-cloak
    style="display: none"
  >
    <div class="relative" @click.stop>
      <!-- Close Button -->
      <button
        @click="open = false"
        class="absolute -top-3 -right-3 bg-white rounded-full p-1 shadow hover:bg-gray-100 transition"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 text-gray-800"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <!-- Gambar -->
      <img :src="imgSrc" class="max-h-[80vh] rounded-lg shadow-lg" />
    </div>
  </div>

  <!-- Gallery -->
  <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mx-4 mt-6">
    <template
      x-for="(item, index) in [
        { src: 'galeri/Sunset Ride.webp', alt: 'Sunset Ride' },
        { src: 'galeri/Sandy Escape.webp', alt: 'Sandy Escape' },
        { src: 'galeri/Dragon Village Life.webp', alt: 'Dragon Village Life' },
        { src: 'galeri/Great Hill.webp', alt: 'Great Hill' },
        { src: 'galeri/Tropical Serenity.webp', alt: 'Tropical Serenity' },
        { src: 'galeri/Swim with Turtles.webp', alt: 'Swim with Turtles' },
        { src: 'galeri/Lost in Blue.webp', alt: 'Lost in Blue' },
        { src: 'galeri/Sunset Wander.webp', alt: 'Sunset Wander' },
        { src: 'galeri/Harbor Escape.webp', alt: 'Harbor Escape' },
        { src: 'galeri/Beautiful Peace Ship.webp', alt: 'Beautiful' },
        { src: 'galeri/Chill Greenery.webp', alt: 'Chill Greenery' },
        { src: 'galeri/Fresh Air.webp', alt: 'Fresh Air' },
      ]"
      :key="index"
    >
      <div class="aspect-square">
        <img
          :src="item.src"
          :alt="item.alt"
          :title="item.alt"
          @click="imgSrc = item.src; open = true"
          class="cursor-pointer w-full h-full object-cover rounded-lg hover:scale-105 transition-transform"
          loading="lazy"
        />
      </div>
    </template>
  </div>
</div>
