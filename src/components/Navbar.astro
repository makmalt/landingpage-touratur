---
const { content } = Astro.props;
---

<nav
  id="navbar"
  class="bg-transparent border-gray-200 dark:bg-transparent w-full fixed z-50 top-0 transition-all duration-300"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto"
  >
    <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img
        src="logobarufix.webp"
        class="h-13 w-auto mt-2"
        alt="Touratur Logo"
      />
      <!-- <img src="logotulisan.png" class="h-18 w-auto" alt="Touratur Logo" /> -->
    </a>
    <div
      class="flex items-center md:order-2 space-x-1 md:space-x-0 rtl:space-x-reverse"
    >
      <button
        type="button"
        data-dropdown-toggle="language-dropdown-menu"
        class="ms-5 inline-flex items-center font-extrabold justify-center px-2 py-2 mb-1 text-md text-white dark:text-white rounded-lg cursor-pointer hover:bg-[#3399CC] dark:hover:bg-[#3399CC] dark:hover:text-white"
      >
        {
          content.flag === "id" && (
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-3.5 w-3.5 me-2 rounded-sm"
              viewBox="0 0 640 480"
            >
              <g fill-rule="evenodd">
                <path fill="#e70011" d="M0 0h640v240H0z" />
                <path fill="#fff" d="M0 240h640v240H0z" />
              </g>
            </svg>
          )
        }

        {
          content.flag === "en" && (
            <svg
              class="h-3.5 w-3.5 rounded-full me-2"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 640 480"
            >
              <path fill="#012169" d="M0 0h640v480H0z" />
              <path
                fill="#FFF"
                d="M75 0l240 180L555 0h85v62L405 240l235 178v62h-85L320 300 85 480H0v-62l235-178L0 62V0h75z"
              />
              <path
                fill="#C8102E"
                d="M424 240l216 164v-30L462 240h178v-32H462l178-134v-30L424 240zm-208 0L0 76v30l178 134H0v32h178L0 404v30l216-164z"
              />
              <path
                fill="#FFF"
                d="M240 0v480h160V0H240zM0 160v160h640V160H0z"
              />
              <path
                fill="#C8102E"
                d="M0 192v96h640v-96H0zM272 0v480h96V0h-96z"
              />
            </svg>
          )
        }

        {content.bahasa}
      </button>
      <!-- Dropdown -->
      <div
        class="z-50 hidden my-4 text-base list-none bg-[#3399CC] divide-y divide-gray-100 rounded-lg shadow-sm dark:bg-[#3399CC]"
        id="language-dropdown-menu"
      >
        <ul class="py-2 font-medium" role="none">
          <li>
            <a
              href="/id"
              class="block px-4 py-2 text-sm text-white hover:bg-gray-100 dark:text-white dark:hover:bg-white dark:hover:text-black"
              role="menuitem"
            >
              <div class="inline-flex items-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-3.5 w-3.5 me-2 rounded-sm"
                  viewBox="0 0 640 480"
                >
                  <g fill-rule="evenodd">
                    <path fill="#e70011" d="M0 0h640v240H0z"></path>
                    <path fill="#fff" d="M0 240h640v240H0z"></path>
                  </g>
                </svg>
                Indonesia (Id)
              </div>
            </a>
          </li>
          <li>
            <a
              href="/en"
              class="block px-4 py-2 text-sm text-white hover:bg-gray-100 dark:text-white dark:hover:bg-white dark:hover:text-black"
              role="menuitem"
            >
              <div class="inline-flex items-center">
                <svg
                  class="h-3.5 w-3.5 rounded-full me-2"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 640 480"
                >
                  <path fill="#012169" d="M0 0h640v480H0z"></path>
                  <path
                    fill="#FFF"
                    d="M75 0l240 180L555 0h85v62L405 240l235 178v62h-85L320 300 85 480H0v-62l235-178L0 62V0h75z"
                  ></path>
                  <path
                    fill="#C8102E"
                    d="M424 240l216 164v-30L462 240h178v-32H462l178-134v-30L424 240zm-208 0L0 76v30l178 134H0v32h178L0 404v30l216-164z"
                  ></path>
                  <path
                    fill="#FFF"
                    d="M240 0v480h160V0H240zM0 160v160h640V160H0z"></path>
                  <path
                    fill="#C8102E"
                    d="M0 192v96h640v-96H0zM272 0v480h96V0h-96z"></path>
                </svg>
                English (En)
              </div>
            </a>
          </li>
        </ul>
      </div>
      <button
        data-collapse-toggle="navbar-language"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-[#3399CC] focus:outline-none dark:text-white dark:hover:bg-[#3399CC]"
        aria-controls="navbar-language"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1 ml-auto"
      id="navbar-language"
    >
      <ul
        class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-transparent dark:bg-transparent md:dark:bg-transparent dark:border-gray-700"
      >
        <li>
          <a
            href="#home"
            class="block py-2 font-extrabold px-3 md:p-0 text-white rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-[#3399CC] dark:text-white md:dark:hover:text-[#3399CC] dark:hover:bg-gray-700 md:dark:hover:bg-transparent dark:border-gray-700"
            >{content.home}</a
          >
        </li>
        <li>
          <a
            href="#trip"
            class="block py-2 font-extrabold px-3 md:p-0 text-white rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-[#3399CC] dark:text-white md:dark:hover:text-[#3399CC] dark:hover:bg-gray-700 md:dark:hover:bg-transparent dark:border-gray-700"
            >{content.trip}</a
          >
        </li>
        <a
          href="#galeri"
          class="block py-2 font-extrabold px-3 md:p-0 text-white rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-[#3399CC] dark:text-white md:dark:hover:text-[#3399CC] dark:hover:bg-gray-700 md:dark:hover:bg-transparent dark:border-gray-700"
          >{content.galeri}</a
        >
      </ul>
    </div>
  </div>
</nav>

<script>
  // Add JavaScript to handle scroll events
  document.addEventListener("DOMContentLoaded", () => {
    const navbar = document.getElementById("navbar");

    // Function to update navbar style based on scroll position
    const updateNavbar = () => {
      if (window.scrollY > 50 || window.scrollY < 0) {
        // When scrolled down, add background
        navbar?.classList.remove("bg-transparent", "dark:bg-transparent");
        navbar?.classList.add("bg-[#00001C]", "dark:bg-[#00001C]");
      } else {
        // When at top, keep transparent
        navbar?.classList.remove("bg-[#00001C]", "dark:bg-[#00001C]");
        navbar?.classList.add("bg-transparent", "dark:bg-transparent");
      }
    };

    // Call on page load
    updateNavbar();

    // Add scroll event listener
    window.addEventListener("scroll", updateNavbar);
  });
</script>
