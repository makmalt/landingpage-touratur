---
import About from "../components/About.astro";
import en from "../locales/en.json";
---

<div class="my-15">
  <About content={en.keunggulan} />

  <ul
    class="flex flex-wrap justify-center gap-20 sm:gap-10 md:gap-20 lg:gap-32 mt-25"
  >
    <li class="flex flex-col items-center">
      <!-- Gambar menyamping -->
      <div class="flex gap-2 justify-center">
        <img
          src="unggul/friendly.png"
          alt="senior friendly"
          class="w-40 h-40"
        />
      </div>
      <!-- Teks di bawah gambar -->
      <p class="mt-2 text-center text-lg font-semibold text-[#6B451A]">
        Senior-friendly
      </p>
      <br />
      <p
        class="text-center font-normal text-sm text-[#6B451A] max-w-[250px] text-balance"
      >
        Touratur provides comfortable and safe travel services for senior citizens.
      </p>
    </li>
    <li class="flex flex-col items-center">
      <!-- Gambar menyamping -->
      <div class="flex gap-2 justify-center">
        <img src="unggul/write.png" alt="personalized" class="w-40 h-40" />
      </div>

      <!-- Teks di bawah gambar -->
      <p class="mt-2 text-center text-lg font-semibold text-[#6B451A]">
        Personalized
      </p>
      <br />
      <p
        class="text-center font-normal text-sm text-[#6B451A] max-w-[250px] text-balance"
      >
        Touratur creates personalized travel experiences tailored to your
        preferences and desires.
      </p>
    </li>
    <li class="flex flex-col items-center">
      <!-- Gambar menyamping -->
      <div class="flex gap-2 justify-center">
        <img src="unggul/sustain.png" alt="sustainable" class="w-40 h-40" />
      </div>

      <!-- Teks di bawah gambar -->
      <p class="mt-2 text-center text-lg font-semibold text-[#6B451A]">
        Sustainable
      </p>
      <br />
      <p
        class="text-center font-normal text-sm text-[#6B451A] max-w-[250px] text-balance"
      >
        Touratur invites you to travel while maintaining care for the earth.
      </p>
    </li>
    <li class="flex flex-col items-center">
      <!-- Gambar menyamping -->
      <div class="flex gap-2 justify-center">
        <img src="unggul/meaningful.png" alt="sustainable" class="w-40 h-40" />
      </div>

      <!-- Teks di bawah gambar -->
      <p class="mt-2 text-center text-lg font-semibold text-[#6B451A]">
        Meaningful
      </p>
      <br />
      <p
        class="text-center font-normal text-sm text-[#6B451A] max-w-[250px] text-balance"
      >
        Touratur brings warm and meaningful travel experiences for you.
      </p>
    </li>
  </ul>
</div>
