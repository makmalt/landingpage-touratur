    <!-- Canonical URL -->
    <link rel="canonical" href="https://touratur.id" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/logoputih.png" />
    <link rel="apple-touch-icon" href="/favicon.jpg" />

    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"
    ></script>
    <style>
      [x-cloak] {
        display: none !important;
      }
    </style>
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@5"
      rel="stylesheet"
      type="text/css"
    />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="apple-touch-icon" href="/favicon.jpg" />
    <!-- Structured Data for Travel Agency -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "TravelAgency",
        "name": "Touratur - Agen Travel Tasikmalaya",
        "description": "Agen Tour Travel Tasikmalaya Terpercaya - Paket Wisata Murah ke Bali, Belitung, Vietnam, Bromo & Destinasi Populer",
        "url": "https://touratur.id",
        "logo": "https://touratur.id/favicon.jpg",
        "image": "https://touratur.id/favicon.jpg",
        "telephone": "+6289509305515",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Tasikmalaya",
          "addressRegion": "Jawa Barat",
          "addressCountry": "Indonesia"
        },
        "areaServed": {
          "@type": "Country",
          "name": "Indonesia"
        },
        "serviceType": "Travel Agency",
        "hasOfferCatalog": {
          "@type": "OfferCatalog",
          "name": "Paket Wisata",
          "itemListElement": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "TouristTrip",
                "name": "Paket Wisata Bali",
                "description": "Nikmati hangatnya matahari dan keindahan pantai Bali yang memukau"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "TouristTrip",
                "name": "Paket Wisata Belitung",
                "description": "Nikmati hembusan angin laut dan pasir putih di Belitung, surga tropis Indonesia"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "TouristTrip",
                "name": "Paket Wisata Vietnam",
                "description": "Hangatkan momen kebersamaan di Vietnam, negeri penuh warna dan cerita"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "TouristTrip",
                "name": "Paket Wisata Bromo",
                "description": "Hirup udara segar dan nikmati keindahan alam di Bromo, permata Jawa Timur"
              }
            }
          ]
        },
        "sameAs": ["https://wa.me/6289509305515"]
      }
    </script>
    <title>Touratur</title>
  </head>
  <body>
    <slot />
    <Analytics />
    <!-- Scroll To Top Button -->
    <button
      id="scrollToTopBtn"
      title="Kembali ke atas"
      class="fixed bottom-30 right-4 z-50 hidden p-3 rounded-full bg-gray-400 opacity-90 text-white shadow-md hover:bg-blue-700 transition-opacity"
    >
      â†‘
    </button>

    <!-- Flowbite -->
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"
    ></script>

    <!-- Scroll to Top Script -->
    <script is:inline>
      const scrollBtn = document.getElementById("scrollToTopBtn");

      window.addEventListener("scroll", () => {
        if (window.scrollY > 300) {
          scrollBtn.classList.remove("hidden");
        } else {
          scrollBtn.classList.add("hidden");
        }
      });

      scrollBtn.addEventListener("click", () => {
        window.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"
    ></script>
  </body>
</html>

<style>
  html,
  body {
    font-family: "Nunito", "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }
</style>
